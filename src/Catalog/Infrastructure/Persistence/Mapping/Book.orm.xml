<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Catalog\Domain\Entity\Book" table="books">
        <id name="bookId" type="integer" column="book_id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title" type="string" column="title" length="255" nullable="false"/>
        <field name="isbn" type="string" column="isbn" length="20" nullable="false"/>
        <field name="publicationDate" type="date" column="publication_date" nullable="true"/>
        <field name="publisher" type="string" column="publisher" length="150" nullable="true"/>
        <field name="edition" type="string" column="edition" length="50" nullable="true"/>
        <field name="numberOfPages" type="integer" column="number_of_pages" nullable="false"/>
        <field name="shelfLocation" type="string" column="shelf_location" length="50" nullable="true"/>
        <field name="coverImage" type="string" column="cover_image" length="255" nullable="false"/>
        <field name="description" type="text" column="description" nullable="false"/>

        <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
        <field name="createdBy" type="integer" column="created_by" nullable="false"/>
        <field name="modifiedAt" type="datetime" column="modified_at" nullable="true"/>
        <field name="modifiedBy" type="integer" column="modified_by" nullable="false"/>

        <field name="isActive" type="boolean" column="is_active" nullable="false"/>
        <field name="isDeleted" type="boolean" column="is_deleted" nullable="false"/>

        <many-to-many field="authors" target-entity="App\Catalog\Domain\Entity\Author" inversed-by="books">
            <join-table name="book_authors">
                <join-columns>
                    <join-column name="book_id" referenced-column-name="book_id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="author_id" referenced-column-name="author_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="category" target-entity="App\Catalog\Domain\Entity\Category">
        <join-column 
            name="category_id" 
            referenced-column-name="category_id" 
            nullable="false"/>
        </many-to-one>

        <many-to-one field="language" target-entity="App\Catalog\Domain\Entity\Language">
        <join-column 
            name="language_id" 
            referenced-column-name="language_id" 
            nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
