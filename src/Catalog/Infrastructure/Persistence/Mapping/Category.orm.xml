<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Catalog\Domain\Entity\Category" table="categories">
        <id name="categoryId" type="integer" column="category_id">
            <generator strategy="AUTO"/>
        </id>

        <field name="categoryName" type="string" column="category_name" length="255"/>
        <field name="description" type="string" column="description" length="1000"/>
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="createdBy" type="integer" column="created_by"/>
        <field name="modifiedAt" type="datetime" column="modified_at" nullable="true"/>
        <field name="modifiedBy" type="integer" column="modified_by"/>
        <field name="isActive" type="boolean" column="is_active"/>
        <field name="isDeleted" type="boolean" column="is_deleted"/>

        <!-- Optional: One-to-Many back-reference to Book -->
        <!-- <one-to-many field="books" target-entity="App\Catalog\Domain\Entity\Book" mapped-by="category"/> -->
    </entity>
</doctrine-mapping>
